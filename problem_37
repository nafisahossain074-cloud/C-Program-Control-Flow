#include <stdio.h>

int main() {
    int n, i;
    int a = 0, b = 1, c;
    int sum = 0;

    printf("Enter how many terms: ");
    scanf("%d", &n);

    printf("Fibonacci Series: ");

    for(i = 1; i <= n; i++) {
        if(i == 1) {
            c = a;
        }
        else if(i == 2) {
            c = b;
        }
        else {
            c = a + b;
            a = b;
            b = c;
        }

        printf("%d ", c);

        if(i % 2 == 0)
            sum = sum + c;
    }

    printf("\nSum of even index Fibonacci numbers = %d", sum);

    return 0;
}
